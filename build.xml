<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="JavaConnector" basedir="." default="buildZip">
	<target name="buildZip" description="create deploy zip">
		<property name = "releaseBuildDir" value = "build" />
		<property name = "releaseLabel" value = "1.0.1" />
		
  		<delete includeEmptyDirs="true" failonerror="false">
  		  	<fileset dir="${releaseBuildDir}/" includes="**"/>
  		</delete>
	  	<copy todir="${releaseBuildDir}/">
	    	<fileset dir=""
	    		includes="README.md, LICENSE"
	    	/>
	  	</copy>
	  	<copy file="target/TestOptimal-JavaConnector-${releaseLabel}.jar" tofile="${releaseBuildDir}/TestOptimal-JavaConnector-${releaseLabel}.jar"/>
	  	<copy file="target/TestOptimal-JavaConnector-${releaseLabel}-jar-with-dependencies.jar" tofile="${releaseBuildDir}/TestOptimal-JavaConnector-${releaseLabel}-jar-with-dependencies.jar"/>
	  	<!--copy file="target/TestOptimal-JavaConnector-${releaseLabel}-javadoc.jar" tofile="${releaseBuildDir}/TestOptimal-JavaConnector-${releaseLabel}-javadoc.jar"/-->
	  	
	  	<zip destfile="TestOptimal-JavaConnector-${releaseLabel}.zip"
	       basedir="${releaseBuildDir}/"
	  	/>
	 </target>

</project>		
